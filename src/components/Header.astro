---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav class="w-full overflow-auto">
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/talks">Talks</HeaderLink></li>
        <li><HeaderLink href="/now">Now</HeaderLink></li>
        <div class="border-l-2 border-[rgb(var(--color-border-code))] relative">
          <span class="relative -top-3 left-1 text-xs">Hobby</span>
        </div>
        <li><HeaderLink href="/watches">Watches</HeaderLink></li>
        <!-- <li><HeaderLink href="/externals">externals</HeaderLink></li> -->
      </ul>
    </section>
  </nav>
  <div
    class="justify-self-end flex items-center content-center text-text-bold"
  >
    <DarkModeToggle />
  </div>
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content);
  }
</style>
